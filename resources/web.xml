    <!-- DWR -->
    <servlet-mapping>
        <servlet-name>DwrServlet</servlet-name>
        <url-pattern>/dwr/*</url-pattern>
    </servlet-mapping>	  
    
	<!-- Welcome file list -->
	<welcome-file-list>
		<welcome-file>login.zul</welcome-file>
	</welcome-file-list>
	
    <error-page>
        <error-code>500</error-code>
        <location>/error.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error.jsp</location>
    </error-page>	
	
